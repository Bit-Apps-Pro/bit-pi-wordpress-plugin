{
  "name": "bitapps/pi",
  "description": "An Integration plugin for wordpress",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/Bit-Apps-Pro/wp-kit"
    }
  ],
  "require": {
    "php": ">=7.4",
    "bitapps/wp-validator": "dev-mazed-dev",
    "bitapps/wp-kit": "dev-main",
    "bitapps/wp-database": "dev-main"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.40",
    "sirbrillig/phpcs-variable-analysis": "*",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "phpunit/phpunit": "^9.3.0",
    "yoast/phpunit-polyfills": "^1.0",
    "phpcompatibility/phpcompatibility-wp": "*",
    "spatie/phpunit-watcher": "^1.23",
    "nunomaduro/phpinsights": "^2.11",
    "brianhenryie/strauss": "^0.14.1",
    "wp-cli/wp-cli": "^2.9.0"
  },
  "autoload": {
    "psr-4": {
      "BitApps\\Pi\\": "./backend/app",
      "BitApps\\Pi\\ComposerScripts\\": "./bin/composer",
      "BitApps\\Pi\\Fixers\\": "./custom-fixers"
    },
    "classmap": [
      "./dependencies"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "BitApps\\Pi\\CLI\\": "./cli"
    }
  },
  "scripts": {
    "strauss": [
      "vendor/bin/strauss"
    ],
    "clean": "rm -rf ./vendor && rm composer.lock && rm -rf ./dependencies",
    "reset": "composer clean && composer install",
    "lint": "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php",
    "unused:variable": "phpcs -p --standard=VariableAnalysis ./backend",
    "bit-flow-compat": "./vendor/bin/phpcs -p ./backend --standard=PHPCompatibilityWP --runtime-set testVersion 7.4-",
    "bit-flow-pro-compat": "./vendor/bin/phpcs -p ./pro/backend --standard=PHPCompatibilityWP --runtime-set testVersion 7.4-",
    "test:unit": "./vendor/bin/phpunit --testdox --colors=always tests/ --exclude-group db",
    "compat": "composer bit-flow-compat && composer bit-flow-pro-compat",
    "test:watch": "./vendor/bin/phpunit-watcher watch",
    "insights": "./vendor/bin/phpinsights",
    "pre-install-cmd": [
      "BitApps\\Pi\\ComposerScripts\\NamespaceUpdater::preInstall"
    ],
    "pre-update-cmd": [
      "BitApps\\Pi\\ComposerScripts\\NamespaceUpdater::preUpdate"
    ],
    "post-install-cmd": [
      "BitApps\\Pi\\ComposerScripts\\NamespaceUpdater::postInstall"
    ],
    "post-update-cmd": [
      "BitApps\\Pi\\ComposerScripts\\NamespaceUpdater::postUpdate"
    ],
    "pi": "./vendor/wp-cli/wp-cli/bin/wp bit-pi",
    "db": "composer pi db",
    "use:pro-plugin": "composer pi use moveToPlugins",
    "use:pro-local": "composer pi use togglePro -- --active=y",
    "use:free-only": "composer pi use togglePro -- --active=n",
    "use:prod": "composer pi use toggleDevStatus -- --active=n",
    "use:dev": "composer pi use toggleDevStatus -- --active=y"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "extra": {
    "strauss": {
      "target_directory": "dependencies",
      "namespace_prefix": "BitApps\\Pi\\Deps\\",
      "classmap_prefix": "BITPI_",
      "constant_prefix": "BITPI_",
      "include_author": false,
      "classmap_output": false,
      "delete_vendor_packages": true,
      "delete_vendor_files": true,
      "copy_static_files": [],
      "delete_static_files": []
    }
  }
}